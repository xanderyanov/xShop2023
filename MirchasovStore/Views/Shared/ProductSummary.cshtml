@model Product

<div class="card card-outline-primary p-1 col-md-4">
    <div class="bg-faded p-1">
        
        <h2>@Model?.Name</h2>
        <small>@Model?.Code1C</small>
        <span class="badge rounded-pill bg-primary text-white"
                style="float:right">
            <small>@Model?.Price.ToString("c")</small>
        </span>
        
    </div>
    <div class="card-text p-1">@Model?.Article</div>
    <form id="@Model?.Code1C" asp-page="/Cart" method="post">
        <input type="hidden" asp-for="Code1C" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            <button type="submit"
                    class="btn btn-success btn-sm pull-right" style="float:right">
                Add To Cart
            </button>
        </span>
    </form>
